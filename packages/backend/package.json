    "@zodios/openapi": "^10.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "pg": "^8.13.1",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-serve-static-core": "^5.1.1",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.11.10",
    "@types/swagger-ui-express": "^4.1.8",
    "prisma": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.3.3"
  }
